"group/screenshot": {
    "drawer": {
      "children-class": "screenshot-tools",  // Generic class name
      "transition-duration": 200,            // Faster transition
      "transition-left-to-right": true
    },
    "modules": [
      "custom/screenshot",    // This will be the visible "handle"
      "custom/screenrecord",  // Hidden until hover
      "custom/wallpaper"      // Hidden until hover
    ],
    "orientation": "horizontal"  // Better for drawers
  },

  
  "group/brightness": {
    "drawer": {
