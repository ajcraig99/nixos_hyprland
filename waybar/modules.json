  "custom/screenshot": {
    "format": "Û∞ÑÄ",
    "tooltip": "Left: Area ‚Ä¢ Right: Full Screen ‚Ä¢ Middle: Timed Area (5s)",
    "on-click": "grimblast --notify copysave area ~/Pictures/Screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png",
    "on-click-right": "grimblast --notify copysave screen ~/Pictures/Screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png",
    "on-click-middle": "sleep 5 && grimblast --notify copysave area ~/Pictures/Screenshots/$(date +'%Y-%m-%d_%H-%M-%S').png"
  },

  "custom/screenrecord": {
    "format": "{}",
    "exec": "if pgrep -x wf-recorder > /dev/null; then if [ $(($(date +%s) % 2)) -eq 0 ]; then echo '<span color=\"#f38ba8\">Û∞ïß</span>'; else echo 'Û∞ïß'; fi; else echo 'Û∞ïß'; fi",
    "interval": 1,
    "tooltip": "Left: Area Record ‚Ä¢ Right: Full Screen Record ‚Ä¢ Click to stop if recording",
    "on-click": "if pgrep -x wf-recorder > /dev/null; then pkill wf-recorder && notify-send 'Screen Recording' 'Recording stopped'; else geometry=$(slurp) && wf-recorder -g \"$geometry\" -f ~/Videos/Recordings/$(date +'%Y-%m-%d_%H-%M-%S').mp4 & notify-send 'Screen Recording' 'Area recording started'; fi",
    "on-click-right": "if pgrep -x wf-recorder > /dev/null; then pkill wf-recorder && notify-send 'Screen Recording' 'Recording stopped'; else wf-recorder -f ~/Videos/Recordings/$(date +'%Y-%m-%d_%H-%M-%S').mp4 & notify-send 'Screen Recording' 'Full screen recording started'; fi"

