      "transition-left-to-right": true
    },
    "modules": [
      "backlight",
      "backlight/slider"
    ],
    "orientation": "horizontal"
  },
  "group/clock": {
    "modules": [
      "clock#date",
      "clock#time"
    ],
    "orientation": "inherit"
  },
  "group/sys-info": {
